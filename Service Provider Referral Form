<script>
 function submitUserForm() {  
    var response = grecaptcha.getResponse();
    if(response.length == 0) {
        document.getElementById('g-recaptcha-error').innerHTML = '<span style="color:red;">Google reCAPTCHA is required.</span>';
        return false;
    }
	document.getElementById('oid').value = '00D5i00000EWPvx';
    return true;
}  
function verifyCaptcha() {
    document.getElementById('g-recaptcha-error').innerHTML = '';
}
</script>
<script>
$(document).ready(function(){
    $('#00N5i00000TJWC7').on('change', function(){
      var hdh = $("#00N5i00000TJWC7"). val();
      if(hdh!=null && hdh.indexOf("Other") >= 0)
      {                                    
          $('#00N5i00000UDwx4').attr('required', 'required');
          $('#OtherEnq').show();
		  
      }else{
          $('#00N5i00000UDwx4').removeAttr('required');
          $('#OtherEnq').hide();  
          $('#00N5i00000UDwx4').val('');
      }	  
  }).change();
});
</script> 
